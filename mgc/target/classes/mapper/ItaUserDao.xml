<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.ita.dao.ItaUserDao">

    <resultMap type="cc.ita.entity.ItaUser" id="ItaUserMap">
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="cloudid" column="cloudid" jdbcType="VARCHAR"/>
        <result property="avater" column="avater" jdbcType="VARCHAR"/>
        <result property="money" column="money" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ItaUserMap">
        select
          username, id, cloudid, avater, money
        from ita_user
        where id = #{id}
    </select>
    <select id="getUserByName" resultType="java.lang.String">
        select
            username
        from ita_user
        where cloudid = #{cloudid}
    </select>
    <select id="getUserByAvatar" resultType="java.lang.String">
        select
            avater
        from ita_user
        where cloudid = #{cloudid}
    </select>
    <select id="getUserByBiography" resultType="java.lang.String">
        select biography
        from ita_user
        where cloudid = #{cloudid}
    </select>

    <select id="queryByCloudId" resultMap="ItaUserMap">
        select
            username, id, cloudid, avater, money
        from ita_user
        where cloudid = #{cloudid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ItaUserMap">
        select
          username, id, cloudid, avater, money
        from ita_user
        <where>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="cloudid != null and cloudid != ''">
                and cloudid = #{cloudid}
            </if>
            <if test="avater != null and avater != ''">
                and avater = #{avater}
            </if>
            <if test="money != null and money != ''">
                and money = #{money}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from ita_user
        <where>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="cloudid != null and cloudid != ''">
                and cloudid = #{cloudid}
            </if>
            <if test="avater != null and avater != ''">
                and avater = #{avater}
            </if>
            <if test="money != null and money != ''">
                and money = #{money}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into ita_user(username, cloudid, avater, money,no)
        values (#{username}, #{cloudid}, #{avater}, #{money},#{no})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into ita_user(username, cloudid, avater, money)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.username}, #{entity.cloudid}, #{entity.avater}, #{entity.money})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into ita_user(username, cloudid, avater, money)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.username}, #{entity.cloudid}, #{entity.avater}, #{entity.money})
        </foreach>
        on duplicate key update
        username = values(username),
        cloudid = values(cloudid),
        avater = values(avater),
        money = values(money)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update ita_user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="cloudid != null and cloudid != ''">
                cloudid = #{cloudid},
            </if>
            <if test="avater != null and avater != ''">
                avater = #{avater},
            </if>
            <if test="money != null and money != ''">
                money = #{money},
            </if>
        </set>
        where id = #{id}
    </update>
    <update id="updateByName">
        update ita_user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="cloudid != null and cloudid != ''">
                cloudid = #{cloudid},
            </if>
        </set>
        where cloudid = #{cloudid}
    </update>
    <update id="updateByNo">
        update ita_user
        <set>
            <if test="no != null and no != ''">
                no = #{no},
            </if>
        </set>
        where cloudid = #{cloudid}
    </update>
    <update id="updateByAvatar">
        update ita_user
        <set>
            <if test="avatar != null and avatar != ''">
                avatar = #{avatar},
            </if>
        </set>
        where cloudid = #{cloudid}
    </update>
    <update id="modifyByBiography">
        update ita_user
        <set>
            <if test="biography != null and biography != ''">
                biography = #{biography},
            </if>
        </set>
        where cloudid = #{cloudid}
    </update>
    <!--通过主键删除-->
    <delete id="deleteById">
        delete from ita_user where id = #{id}
    </delete>

</mapper>

